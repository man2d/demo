<% if @item.specification_images.size > 0 || @item.item_properties.size > 0 %>
<div class="spec" id="specification">
	<% if @item.specification_images.size > 0 %>
	<div class="left"><% @item.specification_images.each do |image| %><img alt="" src="<%= image.url %>" /><% end %></div>
	<% else %>
	<div class="left"><% if @item.image %><img alt="" src="<%= @item.image.url(:normal) %>" /><% end %>
	</div>
    <% end %>
<% if @item.item_properties.size > 0 %>
    <div class="right">
    	<table>
        	<tbody>
<% @item.item_properties.each do |item_property| %>
			<tr><th><p class="name"><%= raw item_property.property.title %><span class="points"></span></p></th><th></th></tr>
            <tr><td></td><td><p class="value"><%= raw item_property.value %></p></td></tr>
<% end %>
        </tbody></table>
    </div>
<% end %>
<div class="clear"></div>
</div>
<% end %>