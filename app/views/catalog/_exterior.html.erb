        <div class="imageflow" id="exteriorFlow">
			<% @item.exterior_images.each do |image| %>
            <img class="item" alt="" title="" src="<%= image.url(:normal) %>" longdesc="javascript:tb_show( '<%= @item.title %>', '<%= image.url(:big) %>', '' )" />
            <% end %>
        </div>
<% end %>