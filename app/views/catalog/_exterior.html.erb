<% if @item.exterior_assets.size > 0 %>
<div id="exterior" class="cat_slideshow" style="position: absolute; top: -300px; left: -2000px">
<div id="extContentFlow" class="ContentFlow" style="width:100%;">
        <div class="loadIndicator"><div class="indicator"></div></div>
        <div class="flow">
			<% @item.exterior_assets.each do |asset| %>
            <img class="item" alt="" title="" src="<%= asset.asset.url %>" />
            <% end %>
            <!-- Add as many items as you like. -->
        </div>
        <div class="globalCaption"></div>
        <div class="scrollbar" style="display:none;"><div class="slider"><div class="position"></div></div></div>
    </div>

</div>
<% end %>