<div class="content">

        <div class="left">
       		<%= render 'shared/breadcrumbs' %>
        	<h1><%= @item.title %><span><%= @item.lgth %></span></h1>
        </div>
        <div class="actions">
        	<p class="presence"><span class="color_gray_l">Наличие:</span> Есть на складе <span class="point">•</span></p>
        	<a href="#">Отправить заявку</a>
        	<a href="#" class="add">Добавить к сравнению</a>
        </div>
        
        <ul class="tabs">
        	<li<%=raw ' class="current"' if params[:view] =='review' %>><a href="?view=review" rel="review">Обзор</a></li>
