
<div class="w910 catalog">
	<% if @page.image && @page.image.url %><%= image_tag @page.image.url %><% else %><h1><%= @page.title %></h1><% end %>
<div class="brand">

<% @page.items.select(:lgth).group(:lgth).each do |length| %>
            <ul>

            	<li class="number"><p><%= length.lgth %></p></li>
<% @page.items.find_all_by_lgth(length.lgth).each do |item| %>
                <li>
                <a href="<%= item.url %>"><% if item.image.url %><img alt="" src="<%= item.image.url(:thumb) %>"><% end %></a>
                <a href="<%= item.url %>" class="name"><%= item.title %></a>

				<% if !session[:comparison] || !session[:comparison].include?(item.id.to_i) %>
				<%= link_to "Добавить к сравнению", "/comparison/#{item.id}", :remote => true, :class => [:add, :comparison], :id => "item_#{item.id}_comparison" %>
				<% else %>
				<%= link_to "Убрать из сравнения", "/comparison/#{item.id}", :remote => true, :class => [:remove, :comparison], :id => "item_#{item.id}_comparison" %>
				<% end %>
                </li>
<% end %>


            </ul>
<% end %>
</div>
</div>