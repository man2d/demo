<% semantic_form_for ["admin", resource], :html => {:multipart => true} do |f| %>
  <% f.inputs do %>
	<%= f.input :title %>
	<%= f.input :image, :as => :file %>
	<%= f.input :item, :as => :select %>
  <% end %>
  <% f.buttons do %>
    <%= f.commit_button :label => "Сохранить", :button_html => {:class => "yellow_button"} %>
  <% end %>
<% end %>