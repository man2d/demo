<% semantic_form_for ["admin", resource] do |f| %>
	<%= f.inputs do %>
	<%= f.input :email, :label => "E-mail" %>
	<%= f.input :name, :label => "Имя" %>
	<%= f.input :user_type, :as => :select, :label => "Тип пользователя", :collection => ["captain", "owner", "admin"]%>
	<%= f.input :about, :as => :text, :label => "Информация" %>
	<%= f.input :city, :label => "Город" %>
	<%= f.input :phone, :label => "Телефон" %>
	<%= f.input :activated, :as => :boolean, :label => "Активирован" %>
	<% end %>
	<%= f.buttons do %>
		<%= f.submit "Сохранить...", :class => :yellow_button %>
		<%= f.link_to "Отмена", collection_url, :class => :yellow_button %>
	<% end %>
<% end %>