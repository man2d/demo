<% content_for :helpbar do %>
<div class="addItems_border">

</div>
<% end %>

<%= form_tag "", :method => "GET", :id => "user_filter" %>
<select name="search[user_id]" onchange="$('#user_filter').submit();">
<option value="">выбрать пользователя</option>
<% User.all.each do |user| %>
<option <%=raw 'selected="selected"' if params[:search][:user_id].to_i == user.id %> value="<%= user.id %>" /><%= user.name %></option>
<% end %>
</select>
</form>
<table border="0" id="main">
	<tr>
		<td>
			<ul class="tree news">
				<% collection.each do |resource| %>
				<li><span><a href="javascript:void();" class="pic context" id="comment_<%=resource.id%>"></a><p class="date"><%= resource.updated_at.to_date %></p><p class="text"><%= resource.comment %></p></span></li>
				<% end %>
			</ul>
		</td>
	</tr>
</table>